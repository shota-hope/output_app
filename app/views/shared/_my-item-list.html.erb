<% @my_items.first(8).each do |item| %>
  <li class='my-item-list'>
    <div class='my-list-main-content'>
      <div class='my-list-cate-detail-content'>     
        <div class='my-list-category'>
          <%= item.category.name %>
        </div>
        <% if item.status_before_type_cast == 1 %>
          <div class='my-list-open'>
            open
          </div>
        <% else %>
          <div class='my-list-closed'>
            closed
          </div>
        <% end %>
      </div>
       <div class='my-list-title-content'>
        <p><%= link_to "#{item.title}", item_path(item.id) %></p>
      </div>
      <div class='my-list-detail-content'>
        <div class='list-like-comment'>
            <div class='my-list-like-count'>
              <%= image_tag "icon-like.png", class: 'my-list-like-icon'%>
              <%= Like.where(item_id: item.id).count %>
            </div>
            <div class='my-list-comment-count'>
              <%= image_tag "icon-comment.png", class: 'my-list-comment-icon'%>
              <%= Comment.where(item_id: item.id).count %>
            </div>
          </div>
        <div class='my-list-created-at'>
          <%= l item.created_at %>
        </div>  
      </div>   
    </div>
  </li>
<% end %>