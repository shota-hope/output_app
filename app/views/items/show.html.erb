<%= render "shared/header" %>

<div class='main'>
  <div class='show-left-content'>

    <div class='show-top'>      
      <div class='show-top-info'>
        <div class='show-top-profile'>
          <%= link_to image_tag(@item.user.profile.image.variant(combine_options:{gravity: :center, resize:"128x128^", crop:"128x128+0+0"}).processed, class: 'show-top-avatar'), user_path(@item.user.id) %>
          <%= link_to @item.user.username, user_path(@item.user.id), class: 'show-top-username' %>   
          <span class='show-top-updated_at'><%= @item.updated_at.strftime('20%y.%m/%d') %> 更新</span>
        </div>
        <div class='show-top-command' id="follow-btn-<%= @item.user.id %>">
          <% if user_signed_in? && @item.user.id == current_user.id  %>
            <%= link_to '編集する', edit_item_path(@item.id), class:'item-edit-btn' %>
          <% elsif user_signed_in? %>
            <%# フォローボタン%>
            <%= render 'follow', user: @item.user %>
            <%# // フォローボタン%>
          <% end %>
        </div>
      </div>
      <span class='show-top-updated_at_hide'><%= @item.updated_at.strftime('20%y.%m/%d') %> 更新</span>
      <div class='show-top-caption'>
        <div class='show-top-title'>
          <%= @item.title %>
        </div>
        <div class='show-top-cate-tag'>
          <div class='show-top-category'>
            <%= @item.category.name%>
          </div>
          <div class='show-top-tag'>
            <%= render_with_tags(@item.tagbody) %>
          </div>
        </div>
        <div class='show-top-url'>
          <%= link_to "✴︎Source✴︎　#{@item.url}", @item.url %>
        </div>
      </div>
      <div class='show-top-communication'>
        <div class='show-top-communication-left' id="like-btn-<%= @item.id %>">
          <%# LIKEボタン%>
          <%= render 'like', item: @item %>
          <%# // LIKEボタン%>
        </div>
        <div class='show-top-communication-right'>
          <%= link_to 'Twitter', "https://twitter.com/intent/tweet?url=http://output-app.com/items/#{@item.id}&text=#{@item.title}&hashtags=OutputApp", class:'show-top-sns-btn' %>
          <%= link_to 'LINE', "https://timeline.line.me/social-plugin/share?url=http://output-app.com/items/#{@item.id}", class:'show-top-sns-btn' %>
        </div>
      </div>
      <div class='show-top-communication-after'>
        <%= link_to 'LIKEしたユーザーを見る', "/items/like/#{@item.id}" %>
      </div>
    </div>

    <div class='show-body'> 
      <% if @item.image.attached? %>
        <div class='show-image-box'>
          <%= image_tag @item.image, class: 'show-image' %>
        </div>
      <% end %>
      <%= markdown(@item.body).html_safe %>
      <%#= safe_join(@item.body.split("\n"),tag(:br)) %>
    </div>

    <div class='show-bottom'>
      <div class='show-bottom-first'>
        <%= link_to image_tag('icon-twitter-white-circle.png', class: 'show-bottom-icon'), "https://twitter.com/intent/tweet?url=http://output-app.com/items/#{@item.id}&text=#{@item.title}&hashtags=OutputApp" %>
        <%= link_to image_tag('icon-line-white-circle.png', class: 'show-bottom-icon'), "https://timeline.line.me/social-plugin/share?url=http://output-app.com/items/#{@item.id}" %>
        <%= link_to image_tag('icon-fb-white-circle.png', class: 'show-bottom-icon'), "https://www.facebook.com/sharer/sharer.php?u=http://output-app.com/items/#{@item.id}" %>
      </div>
      <div class='show-bottom-second'>
      </div>
    </div>

    <div class='comment-area'>
      <%# コメントゾーン%>
      <%= render 'comment'%>
      <%# // コメントゾーン%>
    </div>

  </div>

  <div class='show-right-content'>
    <p>✍️ 開発者メモ</p>
    <p>>>> コンテンツ開発中 >>></P>
  </div>
</div>

<%# スマホ用コマンド %>
<%= render 'shared/command'%>
<%# // スマホ用コマンド %>

<%= render "shared/footer" %>